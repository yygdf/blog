<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iksling.blog.mapper.CommentMapper">

    <resultMap id="BaseResultMap" type="com.iksling.blog.entity.Comment">
            <id property="id" column="id" jdbcType="INTEGER"/>
            <result property="userId" column="user_id" jdbcType="INTEGER"/>
            <result property="replyId" column="reply_id" jdbcType="INTEGER"/>
            <result property="articleId" column="article_id" jdbcType="INTEGER"/>
            <result property="parentId" column="parent_id" jdbcType="INTEGER"/>
            <result property="commentContent" column="comment_content" jdbcType="VARCHAR"/>
            <result property="deletedFlag" column="deleted_flag" jdbcType="BOOLEAN"/>
            <result property="garbageFlag" column="garbage_flag" jdbcType="BOOLEAN"/>
            <result property="ipSource" column="ip_source" jdbcType="VARCHAR"/>
            <result property="ipAddress" column="ip_address" jdbcType="VARCHAR"/>
            <result property="createUser" column="create_user" jdbcType="INTEGER"/>
            <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,user_id,reply_id,
        article_id,parent_id,comment_content,
        deleted_flag,garbage_flag,ip_source,
        ip_address,create_user,create_time
    </sql>

    <select id="selectCountByCondition" resultType="java.lang.Integer">
        SELECT
            count(1)
        FROM
            tb_comment c
        LEFT JOIN tb_article a ON c.article_id = a.id
        <where>
            c.deleted_flag = 0
            AND c.garbage_flag = #{condition.garbageFlag}
            <choose>
                <when test="roleWeight > 300">
                    AND (
                    c.user_id = #{userId} OR a.user_id = #{userId}
                    )
                </when>
                <otherwise>
                    <if test="condition.userId != null">
                        AND c.user_id = #{condition.userId}
                    </if>
                </otherwise>
            </choose>
            <if test="condition.keywords != null">
                AND a.article_title like concat('%', #{condition.keywords}, '%')
            </if>
        </where>
    </select>

    <select id="listCommentsBackDTO" resultType="com.iksling.blog.dto.CommentsBackDTO">
        SELECT
            c.id,c.user_id,ua.username,
            a.article_title,c.comment_content,c.garbage_flag,
            c.create_time,u.avatar,u.nickname,
            u2.nickname replyNickname
        FROM
            tb_comment c
        LEFT JOIN tb_article a ON c.article_id = a.id
        LEFT JOIN tb_user_auth ua ON c.user_id = ua.user_id
        LEFT JOIN tb_user u ON c.user_id = u.id
        LEFT JOIN tb_user u2 ON c.reply_id = u2.id
        <where>
            c.deleted_flag = 0
            AND c.garbage_flag = #{condition.garbageFlag}
            <choose>
                <when test="roleWeight > 300">
                    AND (
                    c.user_id = #{userId} OR a.user_id = #{userId}
                    )
                </when>
                <otherwise>
                    <if test="condition.userId != null">
                        AND c.user_id = #{condition.userId}
                    </if>
                </otherwise>
            </choose>
            <if test="condition.keywords != null">
                AND a.article_title like concat('%', #{condition.keywords}, '%')
            </if>
        </where>
        ORDER BY
            c.create_time DESC
        LIMIT
            #{condition.current}, #{condition.size}
    </select>

    <update id="updateCommentsGarbageVO">
        UPDATE
            tb_comment
        SET
        <choose>
            <when test="garbage.garbageFlag != null">
                garbage_flag = #{garbage.garbageFlag}
            </when>
            <otherwise>
                deleted_flag = 1
            </otherwise>
        </choose>
        WHERE
            1 = 1
        <if test="roleWeight > 300">
            AND (
            user_id = #{userId} OR #{userId} = (SELECT a.user_id FROM tb_article a WHERE article_id = a.id)
            )
        </if>
            AND (
                id in
                <foreach collection="garbage.idList" item="id" index="index" open="(" separator="," close=")">
                    #{id}
                </foreach>
                <if test="garbage.garbageFlag == null || garbage.garbageFlag">
                    or parent_id in
                    <foreach collection="garbage.idList" item="id" index="index" open="(" separator="," close=")">
                        #{id}
                    </foreach>
                </if>
            )
    </update>
</mapper>
